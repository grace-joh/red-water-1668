<h1><%= @dish.name %></h1>
<p>Description: <%= @dish.description %></p>

<div id="dish-ing">
  <p>Ingredients</p>
  <ul>
    <% @ingredients.each do |ing| %>
      <li><%= ing.name %></li>
    <% end %>
  <ul>
</div>

<p>Total Calories: <%= @dish.total_calories %></p>
<p>Made by Chef <%= @dish.chef_name %></p>


<h3>Add an Ingredient</h3>
<%= form_with url: dish_ingredients_path, method: :post, local: true do |f| %>
  <%= f.hidden_field :dish_id, value: @dish.id %>
  <%= f.label :ingredient_id, "Ingredient ID" %>
  <%= f.text_field :ingredient_id %>
  <%= f.submit "Submit" %>
<% end %>